<div class ='ui main text container segment'>
{{#each user}}
<div class ='ui huge header'> Edit User: {{this.last_name}}, {{this.first_name}}</div>
<p>All Fields Required</p>
<form class="ui form" action = '/user/{{this.id}}?_method=PUT' method = 'POST'>
  <div class="field">
    <label>First Name</label>
    <input type="text" required name="first_name" value="{{this.first_name}}">
  </div>
  <div class="field">
    <label>Last Name</label>
    <input type="text" required name="last_name" value="{{this.last_name}}">
  </div>
  <div class="field">
    <label>Email</label>
    <input type="text" required name="email" value="{{this.email}}">
  </div>
  <div class="field">
   <label>Credit Card</label>
    <input type="text" required name="credit_card" value="{{this.credit_card}}">
  </div>
  {{/each}}
  <input class='ui blue big basic button' type='submit'>
  </form>
  </div>