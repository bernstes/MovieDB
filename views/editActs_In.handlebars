<div class ='ui main text container segment'>
{{#each acts_in}}
<div class ='ui huge header'> Edit Acts-In</div>
<form class="ui form" action = '/acts_in/{{this.movie_actor_id}}?_method=PUT' method = 'POST'>
  <div class="field">
    <label>First Name</label>
    <input type="text" name="first_name" value="{{this.first_name}}">
  </div>
  <div class="field">
    <label>Last Name</label>
    <input type="text" name="last_name" value="{{this.last_name}}">
  </div>
  <div class="field">
    <label>Movie Title</label>
    <input type="text" name="title" value="{{this.title}}">
  </div>
  {{/each}}
  <input class='ui blue big basic button' type='submit'>
  </form>
  </div>