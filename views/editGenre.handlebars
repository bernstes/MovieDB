<div class ='ui main text container segment'>
{{#each genre}}
<div class ='ui huge header'> Edit '{{this.name}}'</div>
<p>All Fields Required</p>
<form class="ui form" action = '/genre/{{this.id}}?_method=PUT' method = 'POST'>
  <div class="field">
    <label>Name</label>
    <input type="text" required name="name" value="{{this.name}}">
  </div>
  {{/each}}
  <input class='ui blue big basic button' type='submit'>
  </form>
  </div>