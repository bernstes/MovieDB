<table class="ui celled table">
<thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Credit Card</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  {{#each user}}
    <tr>
      <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.credit_card}}</td>
        <td>
            <a class="ui teal basic button" href="/user/{{this.id}}/edit">Edit</a>
        
            <form id = "delete" action='/user/{{this.id}}?_method=DELETE' method='POST'>
            <button class="ui red basic button">Delete</button></form>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>